<Application
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:KMR" x:Class="KMR.App"
             StartupUri="View/PageSwitcher.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Window}">
            <Setter Property="FontFamily"
            Value="Calibri" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFCDDBEA" Offset="0" />
                        <GradientStop Color="#FF4F88B7" Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <System:Double x:Key="breite">1006</System:Double>
        <System:Double x:Key="hoehe">728</System:Double>
    </Application.Resources>
    <Application.MainWindow>
        <local:PageSwitcher/>
    </Application.MainWindow>
</Application>
